extends base

{% load javascript %}

block title
  | #{current_chapter.slug|upper}

block nav
  ul.right
    li(id="notifDrop").animate.active
      a(id='notifHref', href='/#{current_chapter.slug}') home
          img(id='numNotifs',src="/static/images/notif_circle_1.png")
      div(style="position:absolute;background-color:white;z-index:40;border:1px lightgrey solid;")
        ul(id="navdropshow",style='height:200px;')
    li.animate
      a(href='/#{current_chapter.slug}/members') members
    li.animate
      a(href='/#{current_chapter.slug}/projects/') projects
    li.animate
    - if is_insider
      li.animate
        a(href='/accounts/logout') logout
    - else
      li.animate
        a(href='/accounts/login') login

block pre-footer
  script
    var skills = #{skills|jsonify};
    var affiliations = #{affiliations|jsonify};
    var initiatives = #{initiatives|jsonify};
    var members = #{member_usernames|jsonify};
